<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        android:orientation="horizontal"
        android:paddingHorizontal="15sp"
        android:paddingTop="30sp"
        tools:ignore="MissingConstraints">


        <Button
            android:id="@+id/first_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Выберите первую\nдату" />

        <Button
            android:id="@+id/second_date_picker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Выберите вторую\nдату" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_dates"
        android:layout_width="wrap_content"
        android:layout_height="16sp"
        android:text="Расходы с ... по ..."
        android:layout_marginTop="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/enter_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Показать"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="17sp"
        app:layout_constraintTop_toBottomOf="@+id/text_dates" />

    <TextView
        android:id="@+id/textSpend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="17sp"
        android:layout_marginHorizontal="20sp"
        app:layout_constraintTop_toBottomOf="@+id/enter_date_button" />

    <TextView
        android:id="@+id/textIncome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="17sp"
        android:layout_marginHorizontal="20sp"
        app:layout_constraintTop_toBottomOf="@+id/textSpend" />
</androidx.constraintlayout.widget.ConstraintLayout>